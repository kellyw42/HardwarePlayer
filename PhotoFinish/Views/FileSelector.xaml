<UserControl x:Class="PhotoFinish.Views.FileSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoFinish.Views"
             mc:Ignorable="d" 
             d:DesignWidth="300"
             FontSize="19">
    <DockPanel LastChildFill="True">
        <Button Click="filePickerButton_Click" Content="..." DockPanel.Dock="Right" Width="40"/>
        <TextBox x:Name ="filename" DockPanel.Dock="Left" IsReadOnly="True" />
    </DockPanel>
</UserControl>
